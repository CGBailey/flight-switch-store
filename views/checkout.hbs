<h1>Checkout</h1>
<h2>Shipping and Credit Card Information</h2>


<form action="/checkout" method="POST" id="payment-form">
  <span class="payment-errors"></span>

  <div class="form-row">
    <label>
      <span>Street Address</span><br>
      <input type="text" size="20" name='address'/>
    </label>
  </div>
  <div class="form-row">

    <label for="">
      <span>City</span><br>
      <input type="text" size="20" name='city'/>
    </label>
  </div>

  <div class="form-row">
    <label for="">
      <span>State</span><br>
      <input type="text" size="20" name='state'/>
    </label>
  </div>

  <div class="form-row">
    <label for="">
      <span>Zip Code</span><br>
      <input type="text" size="20" name='zip'/>
    </label>

  </div>

  <div class="form-row">
    <label>
      <span>Card Number</span><br>
      <input type="text" size="20" data-stripe="number"/>
    </label>
  </div>

  <div class="form-row">
    <label>
      <span>CVC</span><br>
      <input type="text" size="4" data-stripe="cvc"/>
    </label>
  </div>

  <div class="form-row">
    <label>
      <span>Expiration (MM/YYYY)</span><br>
      <input type="text" size="2" data-stripe="exp-month"/>
    </label><br>
    <span> / </span>
    <input type="text" size="4" data-stripe="exp-year"/>
  </div>

  <button type="submit">Submit Payment</button>
</form>
